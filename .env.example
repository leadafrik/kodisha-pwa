# Frontend Environment Variables
# Copy this file to .env.local, .env.development.local, or .env.production.local

# API Configuration
# Development
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Production (uncomment and update)
# REACT_APP_API_URL=https://kodisha-backend.onrender.com/api
# REACT_APP_SOCKET_URL=https://kodisha-backend.onrender.com

# Feature Flags
REACT_APP_SALE_LISTINGS_PAUSED=false
REACT_APP_ENABLE_ANALYTICS=false

# Service Configuration (if using external services)
# REACT_APP_SENTRY_DSN=https://...@sentry.io/...
# REACT_APP_GOOGLE_ANALYTICS_ID=G-...
