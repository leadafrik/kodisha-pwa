# Frontend Environment Variables
# Copy this file to .env.local, .env.development.local, or .env.production.local

# API Configuration
# Development
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Production (uncomment and update)
# REACT_APP_API_URL=https://kodisha-backend.onrender.com/api
# REACT_APP_SOCKET_URL=https://kodisha-backend.onrender.com

# OAuth Configuration
# Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here

# Facebook OAuth
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id_here

# Feature Flags
REACT_APP_SALE_LISTINGS_PAUSED=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_RAFFLE_CAMPAIGN=true
# Optional: schedule raffle visibility window (ISO format)
# REACT_APP_RAFFLE_CAMPAIGN_START_AT=2026-02-15T00:00:00+03:00
# REACT_APP_RAFFLE_CAMPAIGN_END_AT=2026-04-15T23:59:59+03:00

# Service Configuration (if using external services)
# REACT_APP_SENTRY_DSN=https://...@sentry.io/...
# REACT_APP_GOOGLE_ANALYTICS_ID=G-...
